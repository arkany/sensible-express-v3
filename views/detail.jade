li.detail(class="#{card.type}")
  figure
    .detail-info
      .detail-image(style="background-image: url('#{card.img}')")
        h1= card.output
      .detail-metadata
        h3= card.name
        p.sensor-type #{card.type} Sensor
        p.last-updated 10 minutes ago
      
    .ct-chart
    .detail-actions
      .buttons(class= card.type)
        button.entypo-mail.is-on
        button.entypo-phone.is-on
        button.entypo-chat.is-off
        button.entypo-monitor.is-off
      //- .sensor-info 10 minutes ago.

